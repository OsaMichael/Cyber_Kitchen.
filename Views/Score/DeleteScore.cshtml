    <script>
                $(document).ready(function () {
                    $(".js-delete-score").click(function (e)
                    {
                        var link = $(e.target);

                        if (confirm("Are you sure you want to delete this score")) {
                            $.ajax({
                                url: "/api/score/" + link.attr("data-score-id"),
                                method: "DELETE"
                            })
                            .done(function () {
                                link.parents("li").fadeOut(function () {
                                    $(this).remove();
                                });
                            })
                            .fail(function () {
                                alert("Something failed!");
                            });
                        }
                    });
                });
    </script>
