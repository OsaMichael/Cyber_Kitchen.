@model Cyber_Kitchen.Models.ScoreModel

@{
    ViewBag.Title = "CreateScore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="alert-info">CHOOSE YOUR CHOICE TO SUIT THE BEST CATERER</h1>
<ol class="breadcrumb page-breadcrumb pull-right">

</ol>
@*<p>
    @Html.ActionLink("New Catere", "CreateRestaurant", "Restaurant", null, new { @class = "btn btn-primary" })
</p>*@
<div class="card-body" id="bar-parent">
    <form action="CreateScore" method="Post" id="form_sample_1" class="form-horizontal" novalidate="novalidate">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-body">


            <div class="form-group row">
                <label class="control-label col-md-3">
                    Voter Name
                    <span class="required" aria-required="true"> * </span>
                </label>

                @Html.DropDownListFor(m => m.VoterId, (IEnumerable<SelectListItem>)ViewBag.voters, " select your name", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.VoterId, "", new { @class = "text-danger" })


            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Restaurant Name
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    @Html.DropDownListFor(m => m.RestId, (IEnumerable<SelectListItem>)ViewBag.restaurants," select your caterer", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.RestId, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Taste
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">

                    <select id="taste" name="Taste">
                        <option value="">select</option>
                        <option value="1">Very Bad</option>
                        <option value="2">Bad</option>
                        <option value="3">Neutral</option>
                        <option value="4">Good</option>
                        <option value="5">Excelent</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Quality
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">

                    <select id="quality" name="Quality">
                        <option value="">select</option>
                        <option value="1">Very Bad</option>
                        <option value="2">Bad</option>
                        <option value="3">Neutral</option>
                        <option value="4">Good</option>
                        <option value="5">Excelent</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-md-3">
                    Quantity
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">

                    <select id="quantity" name="Quantity">
                        <option value="">select</option>
                        <option value="1">Very Bad</option>
                        <option value="2">Bad</option>
                        <option value="3">Neutral</option>
                        <option value="4">Good</option>
                        <option value="5">Excelent</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    TimeLiness
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">

                    <select id="timeliness" name="TimeLiness">
                        <option value="">select</option>
                        <option value="1">Very Bad</option>
                        <option value="2">Bad</option>
                        <option value="3">Neutral</option>
                        <option value="4">Good</option>
                        <option value="5">Excelent</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    CustomerServices
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">

                    <select id="customerServices" name="CustomerServices">
                        <option value="">select</option>
                        <option value="1">Very Bad</option>
                        <option value="2">Bad</option>
                        <option value="3">Neutral</option>
                        <option value="4">Good</option>
                        <option value="5">Excelent</option>
                    </select>
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 col-md-6 pull-right">
                        <button type="submit" class="btn btn-info" id="submitData">Save</button>
                        <button type="button" class="btn btn-danger">Cancel</button>

                    </div>
                    <div class=" col-md-1">
                        <a href="@Url.Action("Index","Score", new { area = ""})" class="btn btn-chatpane">Back To List(s)</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
