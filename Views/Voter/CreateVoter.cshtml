<h1 class="alert-info">ADD VOTERS</h1>
<div class="card-body" id="bar-parent">
    <form action="CreateVoter" method="Post" id="form_sample_1" class="form-horizontal" novalidate="novalidate">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-body">
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Voters Name
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.VotName, new { @class = "form-control input-height", placeholder = "enter voters name" })
                    @Html.ValidationMessageFor(m => m.VotName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-md-3">
                    Staff No.
                    <span class="required" aria-required="true"> * </span>
                </label>
                <div class="col-md-5">
                    @Html.TextBoxFor(m => m.StaffNo, new { @class = "form-control input-height", placeholder = "enter voters name" })
                    @Html.ValidationMessageFor(m => m.StaffNo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="offset-md-3 col-md-6 pull-right" >
                        <button type="submit" class="btn btn-info" id="submitData">Save</button>
                        <button type="button" class="btn btn-danger">Cancel</button>

                    </div>
                    <div class=" col-md-1">
                        <a href="@Url.Action("Index","Voter", new { area = ""})" class="btn btn-chatpane">Back To List(s)</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>






