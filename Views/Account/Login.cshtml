@using Cyber_Kitchen.Models
@model LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "";
}
<!--note: The default layout is remove to enable the downloaded template function as show above -->

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V4</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/Login_v4/Login_v4/images/icons/favicon.ico" />

    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login_v4/Login_v4/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../Home/bg-01.jpg');">
            <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">

                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <span class="login100-form-title p-b-49">
                            Login
                        </span>
              
                        <div class="wrap-input100 validate-input m-b-23" data-validate="Email is reauired">
                            
                            <span class="label-input100">Email</span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "input100", placeholder = "Email" })
                            <span class="focus-input100" data-symbol="&#xf206;"></span>
                             @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="wrap-input100 validate-input m-b-23" data-validate="Password is reauired">
                            <span class="label-input100">Password</span>
                            
                                @Html.PasswordFor(m => m.Password, new { @class = "input100", placeholder = "Password" })
                                <span class="focus-input100" data-symbol="&#xf190;"></span>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                     
                        </div>
                        <div class="text-right p-t-8 p-b-31">
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>

                                <button type="submit" class="login100-form-btn">
                                    Login
                                </button>
                            </div>
                        </div>
                        <br />
                        <div class="container-login100-form-btn">
                            <div @*class="wrap-login100-form-btn"*@>
                                <div class="login100-form-bgbtn"></div>
                                    @Html.ActionLink("Register as a new user", "Register")
                            </div>
                        </div>
                        <p>
                           
                        </p>
                        @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
                    }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Login_v4/Login_v4/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/Login_v4/Login_v4/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login_v4/Login_v4/js/main.js"></script>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>